<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#23958E"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/arizonia"
                android:text="Cambodian University For Specialties"
                android:textSize="18dp"
                android:textStyle="italic"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_baseline_search_24" />

            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="22dp"
                android:background="@android:color/transparent"
                android:hint="Search..."
                android:textColorHint="#7A7272"
                android:textSize="18dp"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_baseline_chat_24" />


        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="560dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="560dp"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/btn_doctoral_academic"
                    android:layout_width="300dp"
                    android:layout_height="95dp"
                    android:background="@drawable/border"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/rectangle3" />
                <ImageButton
                    android:id="@+id/btn_master_academic"
                    android:layout_width="300dp"
                    android:layout_height="95dp"
                    android:background="@drawable/border"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/master" />
                <ImageButton
                    android:id="@+id/btn_bachelor_academic"
                    android:layout_width="300dp"
                    android:layout_height="95dp"
                    android:background="@drawable/border"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/bachelor" />
                <ImageButton
                    android:id="@+id/btn_associate_academic"
                    android:layout_width="300dp"
                    android:layout_height="95dp"
                    android:background="@drawable/border"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/associate" />
            </LinearLayout>
                
           
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            >

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/btn_home_me"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/border"
                    android:src="@drawable/home"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/btn_campus_me"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/border"
                    android:src="@drawable/campus"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/btn_academic_me"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:background="@drawable/border"
                    android:src="@drawable/academic"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/btn_me_me"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/border"
                    android:src="@drawable/me"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>